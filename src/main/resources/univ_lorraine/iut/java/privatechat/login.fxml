   <TextField fx:id="nomUt" layoutX="150.0" layoutY="100.0" prefHeight="30.0" prefWidth="300.0" promptText="Nom d'utilisateur" style="-fx-border-width: 1; -fx-border-color: grey; -fx-border-radius: 5;">
