<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="463.0" prefWidth="691.0" spacing="50.0" style="-fx-background-color: #6aebd2;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="univ_lorraine.iut.java.privatechat.controller.LoginController">
   <Text fill="#325952" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Page de connexion">
      <font>
         <Font name="Ezhuthu Regular" size="42.0" />
      </font>
   </Text>

   <TextField fx:id="user" alignment="TOP_LEFT" layoutX="150.0" layoutY="100.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="30.0" prefWidth="300.0" promptText="login" style="-fx-border-width: 1; -fx-border-color: #38978e; -fx-border-radius: 0; -fx-background-color: #a9e5df;">
      <font>
         <Font name="SansSerif Regular" size="18.0" />
      </font>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <VBox.margin>
         <Insets left="40.0" right="40.0" />
      </VBox.margin>
   </TextField>

   <PasswordField fx:id="login" layoutX="150.0" layoutY="140.0" prefHeight="30.0" prefWidth="300.0" promptText="password" style="-fx-border-width: 1; -fx-border-color: #38978e; -fx-border-radius: 0; -fx-background-color: #a9e5df;">
      <font>
         <Font name="SansSerif Regular" size="18.0" />
      </font>
      <VBox.margin>
         <Insets left="40.0" right="40.0" />
      </VBox.margin>
   </PasswordField>
   <Text fx:id="errorLabel" fill="red" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0">
      <font>
         <Font name="Ezhuthu Regular" size="30.0" />
      </font>
   </Text>
   <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#login" style="-fx-background-color: #38978e; -fx-border-radius: 0; -fx-max-width: 250;" text="Connexion">
      <font>
         <Font name="Ezhuthu Regular" size="19.0" />
      </font>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </Button>
   <effect>
      <Blend />
   </effect>

</VBox>
