   <Button fx:id="btnLogin" onAction="#login" layoutX="335.0" layoutY="195.0" mnemonicParsing="false" style="-fx-background-color: linear-gradient(to right, #d8bfd8, #dda0dd); -fx-text-fill: white; -fx-border-radius: 5;  -fx-border-color: white;" text="Connexion">
