<VBox alignment="CENTER" spacing="50.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="univ_lorraine.iut.java.privatechat.controller.LoginController">


   <Label styleClass="header-section" layoutX="244.0" layoutY="60.0" prefHeight="50.0" prefWidth="210.0" style="-fx-text-fill: #9370db; " text="Bienvenue ! " >
